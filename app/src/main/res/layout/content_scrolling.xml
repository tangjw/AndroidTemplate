<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tjw.template.ScrollingActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <Button
                android:onClick="goToolbar"
                android:textAllCaps="false"
                android:text="@string/btn_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"/>


        <Button
                android:onClick="goBottomNav"
                android:textAllCaps="false"
                android:text="@string/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"/>

        <Button
                android:onClick="goRxJava2"
                android:textAllCaps="false"
                android:text="RxJava2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button3"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
